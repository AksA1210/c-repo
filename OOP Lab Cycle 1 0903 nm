#include <iostream>
#include <cstring>
using namespace std;
class strings
{
    char *name;
    int length;
  public:
    strings()
    {
        length=0;
        name=new char[length+1]  ;
    }
    strings(const char*s)
    {
        length= strlen(s)  ;
        name=new char[length+1] ;
        strcpy(name,s);
    }
    void display(void)
    {
        cout<<name<<endl;
    }
    void join(strings x,strings y);
};
void strings::join(strings x,strings y)
{
    length=x.length+y.length;
    delete name;
    name=new char[length+1];
    strcpy(name,x.name);
    strcat(name,y.name);

}

int main()
{
    strings name1("Anna "),
            name2("Teresa "),
            name3("Baiju"),s1,s2; 
    s1.join(name1,name2);
    s2.join(s1,name3);
    name1.display();
    name2.display();
    name3.display();
    s1.display();
    s2.display();


    return 0;
}


