#include <iostream>
#include <cstring>
using namespace std;
class strings
{
    char *name;
    char *word;
    int length;
    int n; 
  public:
    strings()
    {
        length=0;
        name=new char[length+1]  ;
    }
    void input()
    {
        cout<<"Enter the number of strings : "<<" ";
        cin>>n;
        for(int i=0;i<n;i++)
        {
            cout<<"Enter string : "<<" ";
            cin>>word[i+1];
        }
    }
    strings(const char*s)
    {
        length= strlen(s)  ;
        name=new char[length+1] ;
        strcpy(name,s);
    }
    void display(void)
    {
        cout<<name<<endl;
    }
    void Length(const char*s)
    {
        length=strlen(s);
        cout<<s<<"has "<<length<<" characters";
    }
    void join(strings a,strings b);
    void compare(strings a,strings b);
};
void strings::compare(strings a,strings b)
{
    int len1,len2;
    len1=a.length;
    len2=b.length;
    if (len1>len2)
    {
        cout<< a <<"has more characters than"<<b;
    }
    else
    {
        cout<< b <<"has more characters than"<< a;
    }
}
void strings::join(strings a,strings b)
{
    length=a.length+b.length;
    delete name;
    name=new char[length+1];
    strcpy(name,a.name);
    strcat(name,b.name);

}
int main()
{
    strings s;
    int x;
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : Input the strings "<<endl;
        cout<<"2 : Display the strings "<<endl;
        cout<<"3 : Length of strings"<<endl;
        cout<<"4 : Concatenate the strings  "<<endl;
        cout<<"5 : Compare the strings "<<endl;
        cout<<"6 : Exit "<<endl;
        cout<<endl;
        cout<<"\n\nWhat is your option ?"<<" ";
        cin>>x;
        switch(x)
        {
            case 1: s.input();
            break;
            case 2: s.display();
            break;
            case 3: s.Length();
            break;
            case 4: s.join();
            break;
            case 5: s.compare();
            break;
            case 6: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
    } while (x!=6);
    
    return(0);
}
