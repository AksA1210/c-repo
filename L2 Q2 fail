#include<iostream>                       //lc 2 q2
using namespace std;
class complex
{
     public:
    float x;
    float y;

    complex(){}
    complex(float real,float img)
    {
        x=real;
        y=img;
    }
    friend complex operator+(complex);
    friend complex operator*(complex);
    void display(void);
};
complex operator+(complex a,complex b)
{
    complex temp;
    temp.x=a.x+b.x;
    temp.y=a.y+b.y;
    return(temp);
}
complex operator*(complex a,complex b)
{
    complex temp;
    temp.x=a.x*b.x-a.y*b.y;   
    temp.y=(a.x*b.y)+(a.y*b.x);
    //temp.y=a.x*a.y+a.y*b.x;
    return(temp);
}

void complex::display(void)
{
    cout<<x<<y<<" +i"<<endl;
}
int main()
{
    complex c1,c2,c3;
    float a1,b1,a2,b2;
    cout<<"\nEnter real part of the first complex number : "<<" ";
    cin>>a1;
    cout<<"\nEnter imaginary part of first complex number:"<<" ";
    cin>>b1;
    cout<<"\nEnter real part of the second complex number:"<<" ";
    cin>>a2;
    cout<<"\nEnter imaginary part of the second complex number:"<<" ";
    cin>>b2;
    c1=complex(a1,b1);
    c2=complex(a2,b2);
    c3=c1+c2;
    cout<<"ADDITION"<<endl;
    cout<<"Sum = ";
    c3.display();
    c3=c1*c2;
    cout<<"MULTIPLICATION"<<endl;
    c3.display();
  
}
