

#include<iostream>                               //l1 q3
using namespace std;
class bankaccount
{
    char cust_name[20];
    char acc_type[20];
    int acc_no[20];
    int balance[20];
    int n;
  public:
    void accounts(void)
    {
        num=0;
    }
    void getdetails()
    {
       cout<<"Enter the name of the depositor : "<<" ";
       cin>>cust_name;
       cout<<"Enter the account number :  "  << " " ;
       cin>>acc_no;
       cout<<"Enter the type of account : "<<" ";
       cin>>acc_type;
       cout<<"Enter the balance amount : "<<"  ";
       cin>>balance;
    }    
     void deposit(void)
    {
        int c=21;
        int p;
        cout<<"\n Enter the account number : ";
        cin>>a;
        for(int i=0;i<n;i++)
        {
            if (acc[i]==a)
            {
                c=i;
                break;
            }
        }
        if (c!=21)
        {
            float amt;
            cout<<"\n\n Enter amount to be deposited : "<<" ";
            cin>>amt;
            balance[c]=balance[c]+amt;
            cout<<"-------------------Amount deposited successfully ------------------- "<<endl;
            cout<<"The total amount in your bank account is : "<<balance[c];
            cout<<endl;
        }
        else
        {
            cout<<"Account number doesn't match "<<endl;
           
        }
        
       
    }
    void withdraw(void);
    void display();
};
void bankaccount::withdraw()
{
    int c=21;
    int p;
    cout<<"\n Enter the account number : ";
    cin>>a;
    for(int i=0;i<n;i++)
    {
        if (acc[i]==a)
        {
            c=i;
            break;
        }
    }
    if (c!=21)
    {
        float amt;
        cout<<"\n\n Enter amount to be withdrawn : "<<" ";
        cin>>amt;
        if (balance[c]>(amt+500))
        {
            balance[c]=balance[c]-amt;
            cout << "-------------------Amount withdrawn successfully-------------------"<<endl;
            cout<<"The total amount in your bank account is : "<<balance[c];
            cout<<endl;
        }
        else
        {   
            cout<<"Insufficient bank balance "<<endl;
        }
    else
    {
        cout<<"Account number doesn't match "<<endl;
    }    
}

void bankaccount::display()
{
    void getdetails();
    cout<<"The name of the depositor is : "<< cust_name;
    cout<<"\n";
    cout<<"The account number is : "<< acc_no;
    cout<<"\n";
    cout<<"The type of the account is : "<< acc_type;
    cout<<"\n";
    cout<<"The balance amount is : "<< balance;
    cout<<"\n";
}
int main()
{
    int num;
    cout<<"Enter the number of customers :  "<<endl;
    cin>>num;
    bankaccount a[num];
    int x;
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : Input the details of the customer "<<endl;
        cout<<"2 : Display the details of the bankaccount "<<endl;
        cout<<"3 : Deposit money in the bank account  "<<endl;
        cout<<"4 : Withdraw money from the bank account "<<endl;
        cout<<"5 : Quit "<<endl;
        cout<<endl;
        cout<<"\n\nWhat is your option ?"<<" ";
        cin>>x;
        switch(x)
        {
            case 1: 
            if(int i=0;i<num;i++)
            {
                a[i].getdetails();
            }
            
            break;
            case 2:
            if(int i=0;i<num;i++)
            {
                a[i].display();
            } 
            break;
            case 3:
            if(int i=0;i<num;i++)
            {
                a[i].deposit();
            } 
            break;
            case 4:
            if(int i=0;i<num;i++)
            {
                a[i].withdraw();
            }
            case 5: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
        char a;
        if (x!=5)
        {
        cout<<"Do you want to continue(y/n)?"<<" ";
        cin>>a;
        if (a=='n')
        {
            x=5;
        }
        }
    } while (x!=5);
    
    return(0);
}


#include <iostream>                            //l1 q9 w/ switch
using namespace std;
class test
{
    int code;
    static int count;
public:
    void setcode(void)
    {
        code=++count;
    } 
    void showcode(void)
    {
        cout<<"Object Number : "<<code<<endl;
    }
    static void showcount(void)
    {
        cout<<"Count : "<<count<<endl;
    }
};
int test::count;

int main()
{
    int n;
    cout<<"Enter the number of objects :  "<<endl;
    cin>>n;
    test o[n];
    int x;
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : Create objects "<<endl;
        cout<<"2 : Display the objects "<<endl;
        cout<<"3 : Quit "<<endl;
        cout<<endl;
        cout<<"\n\nWhat is your option ?"<<" ";
        cin>>x;
        switch(x)
        {
            case 1: 
            for(int i=0;i<n;i++)
            {
                o[i].setcode();
                char name;
                int age;
                cout<<"Enter the name of the person : "<<endl;
                cin>>name;
                cout<<"Enter the age of the person : "<<endl;
                cin>>age;
                cout<<"\nObject "<<i+1<<" created"<<endl;
            }    
            break;
            case 2:
            for(int i=0;i<n; i++)
            {
                test::showcount();
                o[i].showcode();
                char name;
                int age;
                cout<<"Name of the person : "<<name<<endl;
                cout<<"Age of the person : "<<age<<endl;
            }
            break;
            case 3: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
        char a;
        if (x!=3)
        {
        cout<<"Do you want to continue(y/n)?"<<" ";
        cin>>a;
        if (a=='n')
        {
            x=3;
        }
        }
    } while (x!=3);
    
    return(0);
}
   
    
    
    
  
#include <iostream>                              //l1 q9 w/o switch
using namespace std;
class test
{
    int code;
    static int count;
public:
    void setcode(void)
    {
        code=++count;
    } 
    void showcode(void)
    {
        cout<<"Object Number : "<<code<<endl;
    }
    static void showcount(void)
    {
        cout<<"Count : "<<count<<endl;
    }
};
int test::count;

int main()
{
    int n;
    cout<<"Enter the number of objects :  "<<endl;
    cin>>n;
    test o[n];
    int x;
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : Create objects "<<endl;
        cout<<"2 : Display the objects "<<endl;
        cout<<"3 : Quit "<<endl;
        cout<<endl;
        cout<<"\n\nWhat is your option ?"<<" ";
        cin>>x;
        switch(x)
        {
            case 1: 
            for(int i=0;i<n;i++)
            {
                o[i].setcode();
                char name;
                int age;
                cout<<"Enter the name of the person : "<<endl;
                cin>>name;
                cout<<"Enter the age of the person : "<<endl;
                cin>>age;
                cout<<"\nObject "<<i+1<<" created"<<endl;
            }    
            break;
            case 2:
            for(int i=0;i<n;i++)
            {
                test::showcount();
                o[i].showcode();
                cout<<"Name of the person : "<<name<<endl;
                cout<<"Age of the person : "<<age<<endl;
            }
            break;
            case 3: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
        char a;
        if (x!=3)
        {
        cout<<"Do you want to continue(y/n)?"<<" ";
        cin>>a;
        if (a=='n')
        {
            x=3;
        }
        }
    } while (x!=3);
    
    return(0);
}
   
    
    
    
  
