

#include<iostream>                  //l2 q8
using namespace std;

//abstract
class Shape
{
    public:
    float area;
    virtual void get_area(int,int)=0;

};
class Rectangle:public Shape
{
    int length,breadth;
    public:
    void get_dimensions(int l,int b)
    {
        length=l;
        breadth=b;
    }
    void get_area(int a,int b)
    {
        area=a*b;
        cout<<"The area of the rectangle is : "<<area<<endl;
    }
};
class Circle:public Shape
{
    int radius;
    public:
    void get_radius(int r)
    {
        radius=r;
    }
    void get_area(void)
    {
        area=3.14*radius*radius;
        cout<<"The area of the circle is : "<<area<<endl;
    }
};
class Square:public Shape
{
    int sidelength;
    public:
    void get_radius(int s)
    {
        sidelength=s;
    }
    void get_area(void)
    {
        area=sidelength*sidelength;
        cout<<"The area of the square is : "<<area<<endl;
    }
};
class Ellipse:public Shape
{
    int minor_r;
    int major_r;
    public:
    void get_dim(int a,int b)
    {
        major_r=a;
        minor_r=b;
    }
    void get_area(void)
    {
        area=3.14*major_r*minor_r;
        cout<<"The area of the square is : "<<area<<endl;
    }
};
int main()
{
    int s,l,b,d,e,f,h;
    int x;
    float r,base,height,bs;
    
    Shape *shape;
    
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : AREA OF A RECTANGLE "<<endl;
        cout<<"2 : AREA OF A CIRCLE "<<endl;
        cout<<"3 : AREA OF A SQUARE "<<endl;
        cout<<"4 : AREA OF A ELLIPSE "<<endl;
        cout<<endl;
        cout<<"Enter choice : "<<" ";
        cin>>x;
        switch(x)
        {
            case 1: 
            int l,b;
            cout<<"Enter the length of the rectangle : "<<" ";
            cin>>l;
            cout<<"Enter the breadth of the rectangle : "<<" ";
            cin>>b;
            Rectangle rect;
            shape=&rect;
            shape->get_area(l,b);
            break;
            case 2: 
            int r;
            cout<<"Enter the radius of the circle : "<<" ";
            cin>>r;
            Circle cir;
            shape=&cir;
            shape->get_area(r);
            break;
            case 3: 
            cout<<"Enter the sidelength of the square : "<<" ";
            cin>>s;
            Square sq;
            shape=&sq;
            shape->get_area(s);
            break;
            case 4: 
            cout<<"Enter the major radius of the ellipse : "<<" ";
            cin>>a;
            cout<<"Enter the minor radius of the ellipse : "<<" ";
            cin>>b;
            Ellipse ell;
            shape=&ell;
            shape->get_area(a,b);
            break;
            case 5: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
        char a;
        if (x!=4)
        {
           cout<<"Do you want to continue(y/n)?"<<" ";
           cin>>a;
           if (a=='n')
           {
               x=4;
           }
        }
    } while (x!=4);
    
    return(0);
}
        
        
