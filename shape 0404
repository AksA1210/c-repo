

#include<iostream>                  //l2 q8
using namespace std;
class Shape
{
    public:
    float area;
    void get_area(void)
    {
        area=0;
    }
};
class Rectangle:public Shape
{
    int length,breadth;
    public:
    void get_dimensions(void)
    {
        length=a;
        breadth=b;
    }
    void get_area(void)
    {
        area=a*b;
        cout<<"The area of the rectangle is : "<<area<<endl;
    }
}
class Circle:public Shape
{
    int radius;
    public:
    void get_radius(void)
    {
        radius=r;
    }
    void get_area(void)
    {
        area=3.14*r*r;
        cout<<"The area of the circle is : "<<area<<endl;
    }
};
class Square:public Shape
{
    int sidelength;
    public:
    void get_radius(void)
    {
        sidelength=s;
    }
    void get_area(void)
    {
        area=s*s;
        cout<<"The area of the square is : "<<area<<endl;
    }
};
class Ellipse:public Shape
{
    int minor_r;
    int major_r
    public:
    void get_dim(void)
    {
        sidelength=s;
    }
    void get_area(void)
    {
        area=s*s;
        cout<<"The area of the square is : "<<area<<endl;
    }
};
int main()
{
    int s,l,b,d,e,f,h;
    int x;
    float r,base,height,bs;
    do
    {
        cout<<"You can do the following : "<<endl;
        cout<<"Enter appropriate number : "<<endl;
        cout<<"1 : AREA OF A RECTANGLE "<<endl;
        cout<<"2 : AREA OF A CIRCLE "<<endl;
        cout<<"3 : AREA OF A SQUARE "<<endl;
        cout<<"4 : AREA OF A ELLIPSE "<<endl;
        cout<<endl;
        cout<<"Enter choice : "<<" ";
        cin>>x;
        switch(x)
        {
            case 1: 
            int r;
            cout<<"Enter the length of the rectangle "
            area(s);
            break;
            case 2: area(l,b);
            break;
            case 3: area(r);
            break;
            case 4: area(base,height);
            break;
            case 5: area(d,e,f);
            break;
            case 6: area(bs,h);
            break;
            case 7: break;
            default:cout<<"Error ! Please try again "<<endl;
        }
        char a;
        if (x!=7)
        {
           cout<<"Do you want to continue(y/n)?"<<" ";
           cin>>a;
           if (a=='n')
           {
               x=7;
           }
        }
    } while (x!=7);
    
    return(0);
}
        
        
